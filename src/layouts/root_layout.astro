---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <nav>
      <ul>
        Demos:
        <li>
          <a href="/">CMS experience</a>
        </li>
        <li>
          <a href="/layout-types">Layout types</a>
        </li>
      </ul>
    </nav>
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  * {
    min-width: 0;
  }

  nav {
    ul {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 16px;
    }

    li {
      list-style: none;
    }
  }

  body {
    margin: 0 auto;
    font-family: monospace;
  }

  main {
    display: grid;
    grid-template-columns: 1fr min(1186px, calc(100% - 64px)) 1fr;
    grid-column-gap: 32px;
    padding: 0 24px 96px;
  }
</style>
