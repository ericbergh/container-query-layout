---
import GridContainer from "../components/grid_container.astro";
import Grid from "../components/grid.astro";
import ContentArea from "../components/content_area.astro";
import Card from "../components/card.astro";
import Layout from "../layouts/layout.astro";
---

<Layout>
  <div class="description">
    <h2>The One Grid</h2>
    <ul>
      <li>This grid can either have content or grids as immediate children.</li>
      <li>The width of the grid items may never be less than 256px.</li>
      <li>The column gap is either 0, 16px or 32px but we account for 32px.</li>
      <li>
        We assume that each grid will have the same number of immediate children
        as it does columns.
      </li>
    </ul>
  </div>
  <div class="grid-showcase">
    <section>
      <h2>4 column grid with 4 nested grids of 4 cards</h2>
      <GridContainer>
        <Grid layout="3-3-3-3">
          {
            Array.from({ length: 4 }).map((_, groupIndex) => (
              <GridContainer key={groupIndex}>
                <Grid layout="12">
                  {Array.from({ length: 4 }).map((_, index) => (
                    <ContentArea key={index}>
                      <Card
                        groupNumber={groupIndex + 1}
                        cardNumber={index + 1}
                      />
                    </ContentArea>
                  ))}
                </Grid>
              </GridContainer>
            ))
          }
        </Grid>
      </GridContainer>
    </section>
    <section>
      <h2>3 column grid with 3 nested grids of 3 cards</h2>
      <GridContainer>
        <Grid layout="4-4-4">
          {
            Array.from({ length: 3 }).map((_, groupIndex) => (
              <GridContainer key={groupIndex}>
                <Grid layout="4-4-4">
                  {Array.from({ length: 3 }).map((_, index) => (
                    <ContentArea key={index}>
                      <Card
                        groupNumber={groupIndex + 1}
                        cardNumber={index + 1}
                      />
                    </ContentArea>
                  ))}
                </Grid>
              </GridContainer>
            ))
          }
        </Grid>
      </GridContainer>
    </section>
    <section>
      <h2>3 column grid with 3 cards</h2>
      <GridContainer>
        <Grid layout="4-4-4">
          {
            Array.from({ length: 3 }).map((_, index) => (
              <ContentArea key={index}>
                <Card groupNumber={1} cardNumber={index + 1} />
              </ContentArea>
            ))
          }
        </Grid>
      </GridContainer>
    </section>
    <section>
      <h2>2 column 4/8 grid with 2 cards</h2>
      <GridContainer>
        <Grid layout="4-8">
          {
            Array.from({ length: 2 }).map((_, index) => (
              <ContentArea key={index}>
                <Card groupNumber={1} cardNumber={index + 1} />
              </ContentArea>
            ))
          }
        </Grid>
      </GridContainer>
    </section>
    <section>
      <h2>2 column 8/4 grid with 2 cards</h2>
      <GridContainer>
        <Grid layout="8-4">
          {
            Array.from({ length: 2 }).map((_, index) => (
              <ContentArea key={index}>
                <Card groupNumber={1} cardNumber={index + 1} />
              </ContentArea>
            ))
          }
        </Grid>
      </GridContainer>
    </section>
    <section>
      <h2>2 column 8/4 grid with 2 nested 1 column grids of 2 cards</h2>
      <GridContainer>
        <Grid layout="8-4">
          <Grid layout="12">
            {
              Array.from({ length: 2 }).map((_, index) => (
                <ContentArea key={index}>
                  <Card groupNumber={1} cardNumber={index + 1} />
                </ContentArea>
              ))
            }
          </Grid>
          <Grid layout="12">
            {
              Array.from({ length: 2 }).map((_, index) => (
                <ContentArea key={index}>
                  <Card groupNumber={1} cardNumber={index + 1} />
                </ContentArea>
              ))
            }
          </Grid>
        </Grid>
      </GridContainer>
    </section>
  </div>
</Layout>

<style>
  .grid-showcase {
    display: grid;
    gap: 64px;
  }

  .description {
    margin: 32px 0 64px 0;
  }

  ul {
    line-height: 1.5;
  }
</style>
